{
  "fileTypes": [
    "py"
  ],
  "injectionSelector": "L:source.py -comment -string",
  "injections": {
    "L:source": {
      "patterns": [
        {
          "match": "<",
          "name": "invalid.illegal.bad-angle-bracket.html"
        }
      ]
    }
  },
  "patterns": [
    {
      "begin": "(.?(\"\"\"--sql))(`)",
      "end": "(\"\"\")",
      "beginCaptures": {
        "1": {
          "name": "variable.parameter"
        }
      },
      "patterns": [
        {
          "include": "source.py#template-substitution-element"
        },
        {
          "include": "source.sql"
        }
      ]
    },
    {
      "begin": "(\"\"\"?(sql|inline-sql)",
      "beginCaptures": {
        "1": {
          "name": "string.block"
        }
      },
      "end": "(\"\"\")",
      "patterns": [
        {
          "include": "source.py#template-substitution-element"
        },
        {
          "include": "source.sql"
        }
      ]
    },
    {
      "begin": "\"\"\"?(sql|inline-sql)",
      "beginCaptures": {
        "1": {
          "name": "string.line"
        }
      },
      "end": "(\"\"\")",
      "patterns": [
        {
          "begin": "(\\G)",
          "end": "(`)"
        },
        {
          "include": "source.py#template-substitution-element"
        },
        {
          "include": "source.sql"
        }
      ]
    }
  ],
  "scopeName": "inline.python-sql"
}